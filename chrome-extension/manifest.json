{
  "manifest_version": 3,

  "name": "Strava Kudos (timer)",
  "description": "Auto-Kudos Activities. Includes timer option to refresh and give kudos.",
  "version": "0.1.23",
  "permissions":["storage"],

  "action": {
        "default_icon":{
        "16": "icon16.png",
        "32":"icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
      },
      "default_title": "Strava Kudos"
    },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "content_scripts": [
    {
      "matches": ["https://www.strava.com/dashboard*","https://www.strava.com/athletes/*","https://www.strava.com/clubs/*"],
      "js": ["./index.js"]
    }
  ]
}